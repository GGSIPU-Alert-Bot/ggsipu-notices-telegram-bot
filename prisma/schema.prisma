generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notice {
  id        Int      @id @default(autoincrement())
  date      String
  title     String
  url       String
  createdAt DateTime @default(now())

  @@unique([title, url])
}

model LastCheckInfo {
  id                     Int      @id @default(autoincrement())
  lastDate               String
  createdAt              DateTime @default(now())
  lastProcessedIdForDate Int
  lastCreatedAt          String
  lastNoticeId           Int
  lastTitle              String
  lastUrl                String
}
